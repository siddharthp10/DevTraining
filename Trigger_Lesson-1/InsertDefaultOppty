/**
 * Description: This trigger will create a default opportunity whenever an account is created
 * with AnnaulRevenue greater than 500000.
 *
 * Created By: Siddharth Pandit
 * Created Date: [Today's Date]
 **/
trigger InsertDefaultOppty on Account (after insert) {
	for (Account acc : Trigger.new) {
	    System.debug ('acc **** - '+ acc);
	    if (acc.AnnualRevenue >= 500000) {
	        Opportunity oppty = new Opportunity ();
	        oppty.Name = acc.Name + ' - Default Oppty';
	        oppty.StageName = 'Qualification';
	        // Your code goes here
	        // You need to make sure to set close date as it's a required field
	        // You need to set the relationship with account before insertation
	    } // End if
	} // End for
} // End trigger 